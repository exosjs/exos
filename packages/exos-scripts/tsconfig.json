{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*/*.test.ts"]
}
