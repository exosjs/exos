{
  "name": "exos-core",
  "version": "0.1.0",
  "description": "Library with core scripts that helps you to develop your React + TypeScript application and micro frontends",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf dist && tsc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exosjs/exos.git"
  },
  "keywords": [
    "react",
    "typescript",
    "exos",
    "exos-core"
  ],
  "author": "nanovazquez <marianodvazquez@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exosjs/exos/issues"
  },
  "homepage": "https://github.com/exosjs/exos#readme",
  "dependencies": {
    "axios": "^0.19.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "typescript": "^3.8.3"
  }
}
