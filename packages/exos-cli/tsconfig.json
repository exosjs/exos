{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es2015",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*/*.test.ts"
  ]
}
