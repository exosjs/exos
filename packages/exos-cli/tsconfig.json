{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es2015",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "lib/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*/*.test.ts"]
}
